<Window x:Class="PL.Call.CallWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Call Details" Height="700" Width="700" Background="#F9FAFC"
        WindowStartupLocation="CenterScreen"
        Loaded="MainWindow_Loaded" Closed="MainWindow_Closed"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">

    <Grid Margin="30">
        <Grid.Resources>
            <Style TargetType="Label">
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="Margin" Value="4"/>
            </Style>
            <Style x:Key="InputStyle" TargetType="Control">
                <Setter Property="Margin" Value="4"/>
                <Setter Property="MinWidth" Value="220"/>
                <Setter Property="Padding" Value="4"/>
            </Style>
        </Grid.Resources>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- שדות -->
        <Label Content="Call ID:" Grid.Row="0" Grid.Column="0"/>
        <TextBox Text="{Binding CurrentCall.CallId}" Style="{StaticResource InputStyle}" Grid.Row="0" Grid.Column="1" IsReadOnly="True"/>

        <Label Content="Description:" Grid.Row="1" Grid.Column="0"/>
        <TextBox Text="{Binding CurrentCall.Description}" Style="{StaticResource InputStyle}" Grid.Row="1" Grid.Column="1"/>

        <Label Content="Address:" Grid.Row="2" Grid.Column="0"/>
        <TextBox Text="{Binding CurrentCall.Address}" Style="{StaticResource InputStyle}" Grid.Row="2" Grid.Column="1"/>

        <Label Content="Latitude:" Grid.Row="3" Grid.Column="0"/>
        <TextBox Text="{Binding CurrentCall.Latitude}" Style="{StaticResource InputStyle}" Grid.Row="3" Grid.Column="1"/>

        <Label Content="Longitude:" Grid.Row="4" Grid.Column="0"/>
        <TextBox Text="{Binding CurrentCall.Longitude}" Style="{StaticResource InputStyle}" Grid.Row="4" Grid.Column="1"/>

        <Label Content="Opening Time:" Grid.Row="5" Grid.Column="0"/>
        <TextBox Text="{Binding CurrentCall.OpeningTime}" Style="{StaticResource InputStyle}" Grid.Row="5" Grid.Column="1"/>

        <Label Content="Max End Time:" Grid.Row="6" Grid.Column="0"/>
        <TextBox Text="{Binding CurrentCall.MaxEndTime}" Style="{StaticResource InputStyle}" Grid.Row="6" Grid.Column="1"/>

        <!--<Label Content="Call Status:" Grid.Row="7" Grid.Column="0"/>
        <ComboBox ItemsSource="{Binding Source={StaticResource StatusCollectionKey}}" 
                  SelectedItem="{Binding CurrentCall.CallStatus}" 
                  Style="{StaticResource InputStyle}" Grid.Row="7" Grid.Column="1"/>--><!--//וגם סוג קריאה-->

        <Label Content="Assignments:" Grid.Row="8" Grid.Column="0"/>
        <TextBox Text="{Binding CurrentCall.CallAssignments}" Style="{StaticResource InputStyle}" Grid.Row="8" Grid.Column="1"/>

        <Border CornerRadius="6" Background="#4CD8C2" Margin="98,35,199,-74" Grid.Column="1" Grid.Row="11">
            <Button Content="{Binding ButtonText}" 
            Click="AddAndUpdate_Click" Width="224" 
            HorizontalAlignment="Center" 
            Foreground="White" FontWeight="Bold"
            Background="#4CD8C2" BorderThickness="0"/>
        </Border>

    </Grid>
</Window>
