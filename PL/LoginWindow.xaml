

<Window
    x:Class="PL.LoginWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Login Management Screen" Height="600" Width="976"
    DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
    WindowStartupLocation="CenterScreen"
    FontFamily="Segoe UI">

    <Window.Background>
        <ImageBrush  Stretch="UniformToFill"/>
    </Window.Background>

    <Grid>
        <Border Background="#4CD8C2" CornerRadius="20" Padding="40" Margin="50"
                HorizontalAlignment="Center" VerticalAlignment="Center" Width="420"
                BorderBrush="#2E86C1" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="Login" FontSize="32" FontWeight="Bold" Foreground="#154360"
                           HorizontalAlignment="Center" Margin="0,0,0,30"/>

                <StackPanel Margin="0,0,0,12">
                    <TextBlock Text="ID Number:" FontSize="15" Margin="0,0,0,5" Foreground="#1B4F72"
                               HorizontalAlignment="Left"/>
                    <TextBox Text="{Binding VolunteerId}" FontSize="16" Height="38" Padding="8"
                             BorderBrush="#2E86C1" BorderThickness="1.5" Background="White"
                             Foreground="#1C2833"/>
                </StackPanel>

                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Password:" FontSize="15" Margin="0,0,0,5" Foreground="#1B4F72"
                               HorizontalAlignment="Left"/>
                    <!--<PasswordBox
                        helpers:PasswordBoxBinding.BoundPassword="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        FontSize="16" Height="38" Padding="8"
                        BorderBrush="#2E86C1" BorderThickness="1.5" Background="White"
                        Foreground="#1C2833"/>-->
                </StackPanel>

                <Button Content="Login" Click="btnLogin_Click"
                        Background="#154360" Foreground="White" FontWeight="Bold" FontSize="20"
                        BorderBrush="#154360" BorderThickness="0" Height="48" Margin="0,10,0,0"
                        Cursor="Hand"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>

