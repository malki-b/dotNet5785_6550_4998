<Window x:Class="PL.Volunteer.VolunteerListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Volunteer List" Height="600" Width="900"
        Background="#F9FAFC"
        WindowStartupLocation="CenterScreen"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- סרגל חיפוש עליון -->
        <DockPanel Grid.Row="0" Margin="0,0,0,10">
            <Label Content="Select Volunteer:" FontWeight="Bold" DockPanel.Dock="Left" VerticalAlignment="Center"/>
            <ComboBox ItemsSource="{Binding Source={StaticResource VolunteerCollectionKey}}"
                      SelectedValue="{Binding VolunteerFilter, Mode=TwoWay}"
                      SelectionChanged="ComboBox_SelectionChanged"
                      Width="200" Margin="10,0"/>
            <TextBox Width="200" Margin="10,0" VerticalAlignment="Center"
                     Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}"/>
            <Button Content="Add Volunteer" Click="Add_Click" Margin="10,0"
                    Background="#4CD8C2" Foreground="White" Width="130" Height="30"/>
        </DockPanel>

        <!-- רשימה -->
        <ListView ItemsSource="{Binding VolunteerList}"
                  SelectedItem="{Binding SelectedVolunteer, Mode=TwoWay}"
                  MouseDoubleClick="Volunteer_MouseDoubleClick"
                  Grid.Row="1" Margin="0,0,0,10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding VolunteerId}" Width="80"/>
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding FullName}" Width="150"/>
                    <GridViewColumn Header="Handled" DisplayMemberBinding="{Binding TotalHandledRequests}" Width="100"/>
                    <GridViewColumn Header="Canceled" DisplayMemberBinding="{Binding TotalCanceledRequests}" Width="100"/>
                    <GridViewColumn Header="Active">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding IsActive}" IsEnabled="False"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Delete" Click="DeleteVolunteer_click"
                                        CommandParameter="{Binding}" Background="#F87171"
                                        Foreground="White" Padding="4"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
